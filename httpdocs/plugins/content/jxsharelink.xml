	<params addpath="/plugins/content/jxsharelink/elements">
		<param type="spacer" default="&lt;b&gt;Display Options&lt;/b&gt;" />
		<param name="shareicon" type="imagelist" default="openshare-icon-32" label="Share Icon" description="Select a share icon to display next to the share links." directory="plugins/content/jxsharelink/images/shareicons" filter="*.png" stripext="1" />
		<param name="placement" type="list" default="listafter" label="Placement" description="Placement of the Share Icon and how to show the list. The buttonheading placement is template dependant.">
			<option value="listbefore">List Before Content</option>
			<option value="listafter">List After Content</option>
			<option value="float_left">List Float Left</option>
			<option value="float_right">List Float Right</option>
			<option value="dropdownbefore">Drop-down Before Content</option>
			<option value="dropdownafter">Drop-down After Content</option>
			<option value="buttonheading">Drop-down In Buttonheading</option>
		</param>
		<param name="openlink" type="list" default="blank" label="Open Link" description="How to open the link.">
			<option value="popup">Popup Window</option>
			<option value="current">Current Window</option>
			<option value="blank">New Window</option>
		</param>
		<param name="excludedarticles" type="text" default="" size="50" label="Excluded Articles" description="List of article ID's that the Share Icon shouldn't be displayed on. Separated by comma." />
		<param type="spacer" default="&lt;b&gt;Drop-down Menu Options&lt;/b&gt;" />
